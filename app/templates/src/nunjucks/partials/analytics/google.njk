{# Global site tag (gtag.js) - Google Analytics #}
{% if googleAnalyticsId|default(false) %}
    <script {% if not cookieConsentStatus|default(false) %}type="text/wait-cookie-consent"{% endif %} async src="https://www.googletagmanager.com/gtag/js?id={{ googleAnalyticsId }}"></script>
    <script {% if not cookieConsentStatus|default(false) %}type="text/wait-cookie-consent"{% endif %}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '{{ googleAnalyticsId }}');
    </script>
{% endif %}
